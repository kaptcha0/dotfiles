{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "lib": ["ES2022"],
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "noImplicitAny": false,
    "baseUrl": ".",
    "typeRoots": ["./types"],
    "skipLibCheck": true,
    "paths": {
      "@widgets/*": ["ts/widgets/*"],
      "@windows/*": ["ts/windows/*"],
      "@services/*": ["ts/services/*"],
      "@src/*": ["ts/*"]
    }
  }
}
